{
  "mcpServers": {
    "interface-validator": {
      "command": "mcp-interface-validator",
      "transport": "stdio",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "intelligentConstraints": {
    "enabled": true,
    "autoActivation": true,
    "defaultTemplate": "default",
    "supportedCommands": [
      ".use interface",
      ".使用接口",
      ".apply constraints",
      ".应用约束"
    ],
    "keyboardShortcuts": {
      "activateConstraints": "Ctrl+Shift+I",
      "listTemplates": "Ctrl+Shift+T",
      "getStatus": "Ctrl+Shift+S"
    }
  },
  "usage": {
    "basicCommands": [
      "在Cursor中输入 '.use interface' 激活智能约束",
      "使用 Ctrl+Shift+I 快捷键快速激活约束",
      "系统会自动分析您的指令并应用合适的约束模板"
    ],
    "examples": [
      {
        "scenario": "开发API接口",
        "command": ".use interface",
        "instruction": "开发一个用户注册API",
        "expectedResult": "自动应用API模板，确保OpenAPI 3.0规范"
      },
      {
        "scenario": "创建React组件",
        "command": ".使用接口",
        "instruction": "创建一个数据表格组件",
        "expectedResult": "自动应用前端模板，注重组件化设计"
      }
    ]
  }
}
