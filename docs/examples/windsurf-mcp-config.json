{
  "mcpServers": {
    "mcp-interface-validator": {
      "command": "npx",
      "args": ["mcp-interface-validator"],
      "env": {
        "NODE_ENV": "production",
        "CONSTRAINT_CONFIG_PATH": "./config/constraint-config.yaml"
      }
    }
  },
  "intelligentConstraints": {
    "enabled": true,
    "autoActivation": true,
    "defaultTemplate": "default",
    "supportedCommands": [
      ".use interface",
      ".使用接口",
      ".apply constraints",
      ".应用约束"
    ],
    "windsurfSpecific": {
      "integrationMode": "enhanced",
      "realTimeValidation": true,
      "codeCompletion": true
    }
  },
  "usage": {
    "basicCommands": [
      "在Windsurf中输入 '.use interface' 激活智能约束",
      "支持实时代码验证和智能补全",
      "系统会自动分析您的指令并应用合适的约束模板"
    ],
    "examples": [
      {
        "scenario": "开发微服务API",
        "command": ".use interface",
        "instruction": "开发一个订单管理微服务",
        "expectedResult": "自动应用API模板，包含微服务最佳实践"
      },
      {
        "scenario": "创建Vue组件",
        "command": ".使用接口",
        "instruction": "创建一个图表展示组件",
        "expectedResult": "自动应用前端模板，支持Vue 3 Composition API"
      }
    ]
  }
}
