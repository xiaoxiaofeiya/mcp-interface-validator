{
  "mcpServers": {
    "mcp-interface-validator": {
      "command": "npx",
      "args": ["mcp-interface-validator"],
      "env": {
        "NODE_ENV": "production",
        "CONSTRAINT_CONFIG_PATH": "./config/constraint-config.yaml"
      }
    }
  },
  "intelligentConstraints": {
    "enabled": true,
    "autoActivation": true,
    "defaultTemplate": "default",
    "supportedCommands": [
      ".use interface",
      ".使用接口",
      ".apply constraints",
      ".应用约束"
    ],
    "traeSpecific": {
      "workflowIntegration": true,
      "taskManagement": true,
      "collaborativeMode": true
    }
  },
  "usage": {
    "basicCommands": [
      "在Trae中输入 '.use interface' 激活智能约束",
      "支持工作流集成和任务管理",
      "系统会自动分析您的指令并应用合适的约束模板"
    ],
    "examples": [
      {
        "scenario": "开发全栈应用",
        "command": ".use interface",
        "instruction": "开发一个博客系统",
        "expectedResult": "自动应用全栈模板，包含前后端接口约束"
      },
      {
        "scenario": "编写测试套件",
        "command": ".使用接口",
        "instruction": "为用户模块编写完整测试",
        "expectedResult": "自动应用测试模板，确保高覆盖率"
      }
    ]
  }
}
