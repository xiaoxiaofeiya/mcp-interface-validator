{
  "name": "mcp-interface-validator",
  "version": "1.0.0",
  "description": "MCP interface validation component for constraining and validating AI programming tools' generated frontend and backend API interface code",
  "type": "module",
  "main": "build/index.js",
  "bin": {
    "mcp-interface-validator": "./build/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node build/index.js",
    "dev": "tsc --watch",
    "test": "jest",
    "test:sqlite": "node --max-old-space-size=2048 --expose-gc node_modules/jest/bin/jest.js --config jest.sqlite.config.js",
    "test:no-sqlite": "jest --testPathIgnorePatterns=sqlite-database.test.ts",
    "test:all": "npm run test:no-sqlite && npm run test:sqlite",
    "verify:sqlite": "node scripts/simple-sqlite-test.cjs",
    "verify:sqlite-full": "node scripts/comprehensive-sqlite-test.cjs",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rimraf build",
    "prepare": "npm run build",
    "prepublishOnly": "npm run clean && npm run build && npm run test:all"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "api-validation",
    "interface-validation",
    "openapi",
    "swagger",
    "ai-tools",
    "typescript"
  ],
  "author": "MCP Interface Validator Team",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/pdfkit": "^0.14.0",
    "@types/supertest": "^6.0.3",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "chokidar": "^3.5.3",
    "express": "^4.18.2",
    "handlebars": "^4.7.8",
    "js-yaml": "^4.1.0",
    "openapi-types": "^12.1.3",
    "pdfkit": "^0.17.1",
    "sqlite3": "^5.1.7",
    "supertest": "^7.1.1",
    "swagger-parser": "^10.0.3",
    "ws": "^8.14.2",
    "xlsx": "^0.18.5",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/handlebars": "^4.0.40",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "build/**/*",
    "config/**/*",
    "docs/**/*",
    "scripts/**/*",
    "README.md",
    "INSTALL.md",
    "USER_README.md",
    "USER_README_EN.md",
    "TECHNICAL.md",
    "API_REFERENCE.md",
    "BEST_PRACTICES.md",
    "LICENSE",
    "package.json",
    "tsconfig.json",
    ".env.example"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xiaoxiaofeiya/mcp-interface-validator.git"
  },
  "bugs": {
    "url": "https://github.com/xiaoxiaofeiya/mcp-interface-validator/issues"
  },
  "homepage": "https://github.com/xiaoxiaofeiya/mcp-interface-validator#readme"
}
